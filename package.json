{
  "name": "axii-stack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "prepare": "husky",
    "shadcn": "pnpm dlx shadcn@latest",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose stop",
    "db:restart": "docker compose restart",
    "db:logs": "docker compose logs -f postgres",
    "db:clean": "docker compose down -v",
    "db:generate": "dotenv -e .env.local -e .env -- prisma generate --schema=src/backend/db/schema.prisma",
    "db:migrate": "dotenv -e .env.local -e .env -- prisma migrate dev --schema=src/backend/db/schema.prisma",
    "db:migrate:deploy": "dotenv -e .env.local -e .env -- prisma migrate deploy --schema=src/backend/db/schema.prisma",
    "db:push": "dotenv -e .env.local -e .env -- prisma db push --schema=src/backend/db/schema.prisma",
    "db:studio": "dotenv -e .env.local -e .env -- prisma studio --schema=src/backend/db/schema.prisma",
    "db:seed": "dotenv -e .env.local -e .env -- tsx src/backend/db/seed.ts",
    "db:reset": "dotenv -e .env.local -e .env -- prisma migrate reset --schema=src/backend/db/schema.prisma",
    "db:format": "prisma format --schema=src/backend/db/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.5",
    "better-auth": "^1.3.28",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "^4.10.1",
    "lucide-react": "^0.546.0",
    "next": "15.5.6",
    "next-themes": "^0.4.6",
    "pino": "^10.1.0",
    "prisma": "^6.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-debug-screens": "^3.0.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
